post ng-class="{'main-post': $first}" ng-repeat="post in ctrl.posts.collection" post="post"

div paging="" page="ctrl.posts.page" page-size="20" total="ctrl.posts.total_count" paging-action="ctrl.query(page)"

.reply ng-show="gon.current_user"
